<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ogi.myapplication.MainActivity"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="@string/title"
            android:id="@+id/textView2"
            android:textSize="30sp"
            android:background="#ffffff"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="5dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/EditText"
            android:maxWidth="50dp"
            android:hint="@string/gakuseki"
            android:textColorHint="#ff0000"
            android:textColor="#ff0000"
            android:textSize="20sp"
            android:gravity="center"
            android:textIsSelectable="false"
            android:theme="@style/EditTextColorControl"
            android:layout_marginTop="20dp"
            android:inputType="textVisiblePassword|text|textCapSentences"
            android:maxLength="6" />
        <!--android:background="#ffffff"-->

        <Button
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:text="@string/hozon"
            android:id="@+id/savebutton"
            android:background="#8ea8a8a8"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/ibeaconstatus"
            android:id="@+id/textView"
            android:textSize="30sp"
            android:background="#ffffff"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="false"
        android:layout_marginTop="5dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="@string/Scan"
            android:id="@+id/scanbutton"
            android:background="#8ea8a8a8"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:layout_weight="0.15"
            android:layout_marginLeft="30dp" />

        <ProgressBar
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="false"
        android:id="@+id/linearLayout3"
        android:layout_marginTop="10dp">
    </LinearLayout>

</RelativeLayout>
